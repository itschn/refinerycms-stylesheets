<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(stylesheet) -%>">
  <span class='title'>
    <%= stylesheet.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.stylesheets_stylesheet_path(stylesheet),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_stylesheets_admin_stylesheet_path(stylesheet),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.stylesheets_admin_stylesheet_path(stylesheet),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => stylesheet.name),
        :method => :delete %>
  </span>
</li>
