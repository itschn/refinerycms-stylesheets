<% content_for :body_content_title do %>
  <%= @stylesheet.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @stylesheet.name %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @stylesheet.content %>
    </p>
  </section>
  <section>
    <h1>Type</h1>
    <p>
      <%=raw @stylesheet.style_type %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="stylesheets">
      <% @stylesheets.each do |stylesheet| %>
        <li>
          <%= link_to stylesheet.name, refinery.stylesheets_stylesheet_path(stylesheet) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
